{
  // comments are allowed.
  // https://jsdoc.app/about-configuring-jsdoc.html
  "opts": {
    "destination": "./jsdoc.out/",
    "private": true,
    "readme": "README.md",
    "recurse": true
  },
  "recurseDepth": 10,
  "source": {
    "include": [
      "src/"
    ],
    "includePattern": ".+\\.[jt]s(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "templates": {
    "better-docs": {
      "name": "Jangouts"
    },
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "typescript": {
    "moduleRoot": "test"
  }
}
